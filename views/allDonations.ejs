<!DOCTYPE html>
<html>
<head>
    <title>All Donations</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 20px;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
            background-color: #fff;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #3498db;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f6f9;
        }

        tr:hover {
            background-color: #d6eaf8;
        }

        .status-paid {
            color: green;
            font-weight: bold;
        }

        .status-created {
            color: orange;
            font-weight: bold;
        }
        .btn-back {
            display: block;
            margin: 20px auto 0;
        }
    </style>
    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
</head>
<body>

<h2>All Donations (Paid + Created)</h2>

<table>
    <tr>
        <th>Sr. No.</th>
        <th>Order ID</th>
        <th>Donor Email</th>
        <th>Payment ID</th>
        <th>Amount</th>
        <th>Currency</th>
        <th>Status</th>
        <th>Date</th>
    </tr>

    <% if (orders.length === 0) { %>
        <tr>
            <td colspan="8">No donations found</td>
        </tr>
    <% } %>

    <% orders.forEach((order, index) => { %>
        <tr>
            <td><%= index + 1 %></td> <!-- Serial number -->
            <td><%= order.order_id %></td>
            <td><%= order.userEmail ? order.userEmail : "Unknown" %></td>
            <td><%= order.payment_id ? order.payment_id : "-" %></td>
            <td>â‚¹ <%= order.amount / 100 %></td>
            <td><%= order.currency %></td>
            <td class="<%= order.status === 'paid' ? 'status-paid' : 'status-created' %>">
                <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
            </td>
            <td><%= order.createdAt.toLocaleString() %></td>
        </tr>
    <% }) %>
</table>

<a href="/admin/dashboard" class="btn btn-secondary mt-3">
    Back to Dashboard
  </a>

  <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"
    ></script>
</body>
</html>
