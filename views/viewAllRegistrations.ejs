<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Registrations</title>

  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
      background-color: #f6f7f9;
      margin: 0;
      padding: 20px;
      color: #222;
    }

    h2 {
      margin: 20px 0 12px;
      font-size: 20px;
      font-weight: 600;
    }

    /* Action buttons */
    .actions {
      display: flex;
      gap: 12px;
      margin-bottom: 16px;
    }

    .export-btn {
      padding: 8px 16px;
      background-color: #198754;
      color: #fff;
      text-decoration: none;
      border-radius: 6px;
      font-size: 14px;
    }

    /* Filter form */
    form {
      display: flex;
      gap: 14px;
      flex-wrap: wrap;
      background-color: #fff;
      padding: 16px;
      border-radius: 8px;
      border: 1px solid #ddd;
      margin-bottom: 20px;
    }

    .form-group {
      min-width: 200px;
    }

    label {
      font-size: 13px;
      margin-bottom: 4px;
      display: block;
      color: #555;
    }

    input[type="text"],
    input[type="date"] {
      width: 100%;
      padding: 8px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 14px;
    }

    button {
      padding: 8px 14px;
      border: 1px solid #ccc;
      border-radius: 6px;
      background-color: #f2f2f2;
      font-size: 14px;
      cursor: pointer;
      height: 34px;
      align-self: flex-end;
    }

    button:hover {
      background-color: #e6e6e6;
    }

    /* Table */
    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #fff;
      border: 1px solid #ddd;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
      font-size: 14px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
      font-weight: 600;
    }

    tr:nth-child(even) {
      background-color: #fafafa;
    }

    /* Back button */
    .back-btn {
      display: inline-block;
      margin-top: 16px;
      padding: 8px 14px;
      font-size: 14px;
      color: #000;
      text-decoration: none;
      border: 1px solid #cfcfcf;
      border-radius: 6px;
      background-color: #f2f2f2;
    }

    .back-btn:hover {
      background-color: #e6e6e6;
    }

    .empty {
      padding: 12px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 6px;
    }
  </style>
</head>

<body>

  <%- include('partials/navbar') %>

  <div class="actions">
    <a href="/admin/exportUser" class="export-btn">Export All Users</a>
  </div>

  <form method="GET" action="/admin/viewallregistrations">
    <div class="form-group">
      <label>Name</label>
      <input type="text" name="name" placeholder="Search by name" value="<%= name || '' %>">
    </div>

    <div class="form-group">
      <label>From Date</label>
      <input type="date" name="fromDate" value="<%= fromDate || '' %>">
    </div>

    <div class="form-group">
      <label>To Date</label>
      <input type="date" name="toDate" value="<%= toDate || '' %>">
    </div>

    <button type="submit">Filter</button>
  </form>

  <h2>All Registered Users</h2>

  <% if (users.length === 0) { %>
    <div class="empty">No registrations found.</div>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Registered On</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.name || "N/A" %></td>
            <td><%= user.email %></td>
            <td>
              <%= user.createdAt
                ? new Date(user.createdAt).toLocaleString("en-IN")
                : "N/A" %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>


  <a href="/admin/dashboard" class="back-btn">‚Üê Back to Dashboard</a>

</body>
</html>
