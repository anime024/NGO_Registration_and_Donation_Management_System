<!DOCTYPE html>
<html>
<head>
    <title>Successful Donations</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
        rel="stylesheet"
    />
    <style>
        body {
            background-color: #f0f4f8;
            font-family: Arial, sans-serif;
            padding: 20px;
            color: #333;
        }

        h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 25px;
        }

        table {
            background-color: #fff;
            border-collapse: collapse;
            width: 100%;
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

        th, td {
            text-align: center;
            padding: 12px;
            border: 1px solid #ddd;
        }

        th {
            background-color: #28a745;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f6f9;
        }

        tr:hover {
            background-color: #d4edda;
        }

        .btn-back {
            display: block;
            margin: 20px auto 0;
        }
    </style>
</head>
<body>

<h2>All Successful Donations</h2>

<table class="table table-hover">
    <tr>
        <th>Sr. No.</th>
        <th>Order ID</th>
        <th>Donor Email</th>
        <th>Payment ID</th>
        <th>Amount</th>
        <th>Currency</th>
        <th>Date</th>
    </tr>

    <% if (orders.length === 0) { %>
        <tr>
            <td colspan="7">No successful donations found</td>
        </tr>
    <% } %>

    <% orders.forEach((order, index) => { %>
        <tr>
            <td><%= index + 1 %></td> <!-- Serial number -->
            <td><%= order.order_id %></td>
            <td><%=order.userEmail ? order.userEmail : "Unknown" %></td>
            <td><%= order.payment_id %></td>
            <td>â‚¹ <%= order.amount / 100 %></td>
            <td><%= order.currency %></td>
            <td><%= order.createdAt.toLocaleString() %></td>
        </tr>
    <% }) %>
</table>

<a href="/admin/dashboard" class="btn btn-secondary btn-back">
    Back to Dashboard
</a>

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
    crossorigin="anonymous"
></script>
</body>
</html>
