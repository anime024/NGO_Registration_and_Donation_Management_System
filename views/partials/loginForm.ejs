<style>
  .login-wrapper {
    min-height: 80vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #ffecd2, #fcb69f);
    padding: 20px;
  }

  .login-card {
    background: white;
    padding: 35px;
    width: 100%;
    max-width: 420px;
    border-radius: 16px;
    box-shadow: 0 12px 30px rgba(0,0,0,0.2);
  }

  .login-card h2 {
    text-align: center;
    margin-bottom: 25px;
    color: #e76f51;
    font-weight: bold;
  }

  .login-card label {
    font-weight: 600;
    color: #444;
    margin-bottom: 6px;
  }

  .login-card input {
    border-radius: 10px;
    padding: 10px;
    border: 1px solid #ddd;
  }

  .login-card input:focus {
    border-color: #e76f51;
    box-shadow: 0 0 0 0.15rem rgba(231, 111, 81, 0.25);
  }

  .login-btn {
    width: 100%;
    margin-top: 20px;
    background-color: #e76f51;
    border: none;
    padding: 12px;
    font-weight: bold;
    border-radius: 10px;
    transition: background-color 0.3s ease, transform 0.3s ease;
  }

  .login-btn:hover {
    background-color: #d45d42;
    transform: translateY(-2px);
  }
</style>

<div class="login-wrapper">
  <form class="login-card" action="/user/login" method="post">
    <h2>User Login</h2>

    <div class="mb-3">
      <label>Email Address</label>
      <input
        type="email"
        class="form-control"
        id="email"
        name="email"
        placeholder="Enter your email"
        required
      >
    </div>

    <div class="mb-3">
      <label>Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter your password"
        required
      >
    </div>

    <button type="submit" class="btn login-btn">
      Login
    </button>
  </form>
</div>
